#! /bin/zsh

# keybr â€” work through progressively more letters

minwpm=${TTYP_MINWPM-45} # a little slowerthan default for this exercise

autoload -U colors; colors

for c in t o s u d y c g h p m k b w f z v k x q j
do  # Repeat test till sufficienly fast
    while ! TTYP_MINWPM=$minwpm TTYP_POOLBAND=10000 TTYP_PATTERN='^['eniarl$c${(j::)accum}']*'$c'['eniarl$c${(j::)accum}']*$' ttypist
    do    print "$fg_bold[red]TOO SLOW$reset_color"; done
    accum+=$c
done
